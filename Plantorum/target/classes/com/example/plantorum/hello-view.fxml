<?xml version="1.0" encoding="UTF-8"?>
        <?import javafx.scene.control.ComboBox?>
        <?import javafx.scene.layout.GridPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.plantorum.TimerController"
      spacing="10" alignment="center" styleClass="calendar-container">
<HBox spacing="10" alignment="center">
        <ComboBox fx:id="yearComboBox" prefWidth="100" styleClass="custom-combo-box"/>
        <ComboBox fx:id="monthComboBox" prefWidth="150" styleClass="custom-combo-box"/>
</HBox>
<GridPane fx:id="calendarGrid" hgap="10" vgap="10" styleClass="calendar-grid">
        <!-- GridPane for dynamically added labels -->
</GridPane>
</VBox>
